{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "rootDir": "src/",
        "outDir": "dist/",
        "strict": true,
        "moduleResolution": "Node16",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
		"paths": {
			"@utils/*": ["src/utils/*"],
			"@services/*": ["src/services/*"],
			"@routes/*": ["src/routes/*"],
			"@models/*": ["src/utils/interfaces/models/*"]
		}
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
		".vscode",
		".git",
        ".env",
		"__tests__",
		"jest.config.js",
		"coverage"
    ],
}
